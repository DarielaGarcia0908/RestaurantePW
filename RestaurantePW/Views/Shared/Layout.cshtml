@using RestaurantePW.Services
@inject MenuService menu
<html>
<head>
    <title>SuperTaco</title>
    <link href="~/StyleSheet.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

</head>
<body>
    <header class="header">
        <div class="container">
            <div class="btn-menu">
                <label for="btn-menu">☰
                 
                </label>
            </div>
            
            <nav class="menu">
                <a href="~/">Inicio</a>
                <a href="#">Iniciar sesión</a>
                @*<a href="#">Blog</a>
                <a href="#">Contacto</a>*@
            </nav>
        </div>
        <div class="logo">

            <h1>
                SUPER TACO
            </h1>

        </div>
   
    </header>
    <div class="capa"></div>
    <!--	--------------->
    <input type="checkbox" id="btn-menu">
    <div class="container-menu">
        <div class="cont-menu">
            <nav>
                <a id="menu" >Menú</a>
                @foreach (var item in menu.Get())
                {
                    <a href="~/@(item.Nombre)">@item.Nombre</a>
                }
            </nav>
            <label for="btn-menu">✖️</label>
        </div>
    </div>
  
    <main>
        @RenderBody()
    </main>
    <!--FOOTER-->
