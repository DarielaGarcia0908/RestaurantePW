        <div class="top_header">
            <section>
                <span><i class="fa fa-map-marker"></i></span>
                <span>Calle Puebla #1735, Colonia Zaragoza, Nueva Rosita, Coahuila, pincode</span>
            </section>
            <section>
                <span><i class="fa fa-phone"></i></span>
                <span>(+52) 864 103 8857</span>
            </section>
            <section>
                <span><i class="fa fa-envelope"></i></span>
                <span>supertaco@gmail.com</span>
            </section>
        </div>
        <span class="border-shape"></span>
        <div class="bottom_content">
            <section>
                <a href="https://es-la.facebook.com/Supertaco2001/"><i class="fa fa-facebook"></i></a>
                <a href="#"><i class="fa fa-instagram"></i></a>
                <a href="#"><i class="fa fa-whatsapp"></i></a>
                <a href="#"><i class="fa fa-twitter"></i></a>
            </section>
            <section>
                <a href="~/">Inicio</a>
                @*<a href="#">About us</a>
                <a href="#">Order</a>
                <a href="#">Retail</a>
                <a href="#">Member</a>
                <a href="#">Contact Us</a>*@
            </section>
        </div>
        <div class="copyright">
            Copyright © 2022 Super Taco - All rights reserved
        </div>
    </footer>
    <!--End Footer-->
</body>
</html>