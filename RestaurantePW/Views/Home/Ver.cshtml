@model RestaurantePW.Models.Platillo
@{
    Layout = "Layout";
}

<div class="datosproductos">
    <h1 id="nombre">@Model.Nombre</h1>

    <img src="~/img_platillos/@(Model.Id).jpg" id="imagen" />
    <p>
        <label>Precio:</label>
        @if (Model.Precio != null)
        {
            <label id="precio">@(Model.Precio.Value.ToString("c"))</label>
        }
    </p>
    <p>
        <label>Categoria:</label>
        <label id="categoria">@(Model.IdCategoriaNavigation?.Nombre)</label>
    </p>
    @*<p>
        <label>Unidad de Medida:</label>
        <label id="unidadmedida">@Model.UnidadMedida</label>
    </p>*@
    <p>
        <label>Descripción:</label>
        <label id="descripcion">@(Model.Descripcion)</label>
    </p>

    <p style="text-align:center; margin:20px 0">
        <a href="javascript:window.history.back()">Regresar</a>
    </p>

</div>
