@model RestaurantePW.Models.Categoria
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{

    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<form method="post" action="~/Administrador/Categorias/Editar">
    <div>
        <h1>Editar Categoría</h1>

        <input type="hidden" id="id" asp-for="Id" />

        <label>Nombre:</label>
        <input type="text" id="txtNombre" required="required" asp-for="Nombre" />

        <div class="botones">
            <p id="error"> @Html.ValidationSummary() </p>
            <input type="submit" value="Guardar" id="btnGuardar" />
            <a href="~/Administrador/Categorias"><input type="button" value="Cancelar" id="btnCancelar" formnovalidate="formnovalidate" /></a>
        </div>
    </div>
</form>
