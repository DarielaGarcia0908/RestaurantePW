@model RestaurantePW.Models.Categoria
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{

    Layout = "~/Views/Shared/LayoutAdmin.cshtml";
}

<form method="post" action="~/administrador/categorias/eliminar">
    <div>
        <h1>Eliminar Categoría</h1>

        <input type="hidden" id="id" asp-for="Id" />
        @*<input type="hidden" id="id" asp-for="Nombre" /> Esto se puede utilizar en caso de que no regresemos la entidad*@

        <p>¿Está seguro de eliminar la categoría "<span id="nombreCategoria">@Model.Nombre</span>"?</p>

        <div class="botones">
            <p id="error">
                @Html.ValidationSummary()
            </p>
            <input type="submit" value="Si" id="btnSi" />
            <a href="~/administrador/categorias"><input type="button" value="No" id="btnNo" formnovalidate="formnovalidate" /></a>
        </div>
    </div>
</form>